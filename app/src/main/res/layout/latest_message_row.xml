<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="120dp">

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            app:srcCompat="@drawable/googleg_disabled_color_18"
            android:id="@+id/latestmessages_imageview"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"/>

    <TextView
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/latestmessages_textview_name"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toEndOf="@+id/latestmessages_imageview"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/latestmessages_textview_message"
            app:layout_constraintVertical_chainStyle="packed"/>

    <TextView
            android:text="Latest message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/latestmessages_textview_message"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/latestmessages_imageview"
            android:layout_marginStart="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/latestmessages_textview_name"
            app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginTop="8dp"/>
</android.support.constraint.ConstraintLayout>